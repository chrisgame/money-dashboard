{{#monzo-transaction-bucketer
  tabularData=@transactions
  outgoingsOnly=true
  categoryTransactionsOnly=true
  as | convertedData |
}}
  {{line-chart
    width=this.width
    height=this.lineChartHeight
    data=convertedData.data
    formatLegendLabel=(fn this.formatText)
    formatValue=(fn this.convertToGbp)
    formatValueForAxis=(fn this.convertToWholeGbp)
    color=convertedData.colorScale
  }}
{{/monzo-transaction-bucketer}}
